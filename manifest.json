{
  "manifest_version": 3,
  "name": "Cyberdark - Dark Mode",
  "short_name": "Cyberdark",
  "version": "2.1.0",
  "version_name": "2.1.0",
  "description": "Instant dark mode that protects your eyes. Zero flashbang - pages are dark from the first pixel. Cyberpunk styling, accessibility features, and scheduled activation.",
  "author": "lil.business",
  "default_locale": "en",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["validate.js", "config.js", "content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cyberdark",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "offline_enabled": true,
  "homepage_url": "https://github.com/lilbusiness/cyberdark",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
